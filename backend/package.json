{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "seed:admin": "node src/scripts/seed-admin.js",
    "test:email": "node src/scripts/test-email.js",
    "test:voucher-engine": "node src/scripts/test-voucher-engine.js",
    "test:hr-payroll": "node src/scripts/test-hr-payroll-routes.js",
    "test:bom": "node src/scripts/test-bom-routes.js",
    "test:approval-audit": "node src/scripts/test-approval-audit-enhancements.js",
    "test:approval-translation-code-policy": "node src/scripts/test-approval-translation-code-policy.js",
    "clear:labour-rates": "node src/scripts/clear-labour-rates.js",
    "test:e2e": "playwright test",
    "test:e2e:bom": "playwright test tests/e2e/bom-ui.spec.js",
    "test:e2e:bom:negative": "playwright test tests/e2e/bom-ui-negative.spec.js",
    "test:e2e:bom:all": "playwright test tests/e2e/bom-ui.spec.js tests/e2e/bom-ui-negative.spec.js --output test-results-bom-all",
    "test:e2e:hr-payroll-ui": "playwright test tests/e2e/hr-payroll-ui.spec.js",
    "test:e2e:activity": "playwright test tests/e2e/activity-logs.spec.js",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:install": "playwright install --with-deps",
    "build:css": "npx tailwindcss -i ./src/styles.css -o ./public/styles.css",
    "dev:css": "npx tailwindcss -i ./src/styles.css -o ./public/styles.css --watch",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "db:ddl": "psql -U postgres -d erp -v ON_ERROR_STOP=1 -f src/database/ddl/999_all.sql",
    "db:clear-labour-rates": "psql -U postgres -d erp -v ON_ERROR_STOP=1 -f src/database/seeds/clear_labour_rates.sql"
  },
