<label class="flex flex-col gap-2 rounded-2xl border border-slate-200 bg-white px-4 py-3">
  <span class="text-[10px] font-semibold uppercase tracking-[0.2em] text-slate-500"><%= t("created_by") %></span>
  <select class="rounded-lg border border-slate-200 bg-white px-3 py-2 text-xs text-slate-700" data-filter-created-by>
    <option value=""><%= t("all") %></option>
    <% users.forEach(function(user) { %>
      <option value="<%= user.username %>"><%= user.username %></option>
    <% }) %>
  </select>
</label>

<label class="flex flex-col gap-2 rounded-2xl border border-slate-200 bg-white px-4 py-3">
  <span class="text-[10px] font-semibold uppercase tracking-[0.2em] text-slate-500"><%= t("created_at") %></span>
  <div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
    <input class="rounded-lg border border-slate-200 bg-white px-3 py-2 text-xs text-slate-700" type="date" data-filter-created-at-start />
    <input class="rounded-lg border border-slate-200 bg-white px-3 py-2 text-xs text-slate-700" type="date" data-filter-created-at-end />
  </div>
</label>
