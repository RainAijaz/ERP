<label class="flex w-full flex-col gap-2 rounded-2xl border border-slate-200 bg-white px-3 py-2 shadow-sm">
  <span class="text-[10px] uppercase tracking-[0.2em] text-slate-400"><%= t("party_type") %></span>
  <div class="flex flex-col gap-2" data-filter-list="party-type">
    <div class="flex items-center gap-2">
      <select class="w-20 bg-transparent text-[10px] font-semibold text-slate-500 focus:outline-none cursor-pointer" data-filter-party-type-mode>
        <option value="include"><%= t("include") %></option>
        <option value="exclude"><%= t("exclude") %></option>
      </select>
      <select class="flex-1 bg-transparent text-xs font-semibold text-slate-700 focus:outline-none cursor-pointer" data-filter-party-type>
        <option value=""><%= t("all") %></option>
      </select>
      <button class="w-6 rounded-full border border-slate-200 px-2 py-0.5 text-[10px] font-semibold text-slate-500" type="button" data-filter-add="party-type">+</button>
    </div>
  </div>
</label>
