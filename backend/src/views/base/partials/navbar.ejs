<div class="flex flex-wrap items-center gap-3 text-xs text-muted">
  <div class="flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-1.5 shadow-sm">
    <span class="text-[10px] uppercase tracking-[0.2em] text-muted"><%= t("signed_in_as") %></span>
    <span class="font-semibold text-slate-800"><%= user?.username || "User" %></span>
  </div>
  <form method="get" action="/" class="flex items-center">
    <label for="branch-select" class="sr-only"><%= t("branch") %></label>
    <div class="flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-1.5 shadow-sm">
      <span class="text-[10px] uppercase tracking-[0.2em] text-muted"><%= t("branch") %></span>
      <% if (branchScope && branchScope.length > 1) { %>
        <select id="branch-select" name="branch_id" class="bg-transparent text-xs font-semibold text-slate-700 focus:outline-none" onchange="this.form.submit()">
        <% if (branchOptions && branchOptions.length) { %>
            <% branchOptions.forEach(function(branch) { %>
              <option value="<%= branch.id %>" <%= Number(branch.id) === branchId ? "selected" : "" %>>
                <%= branch.code && branch.name && branch.code !== branch.name ? branch.code + " - " : "" %><%= branch.name || branch.code || branch.id %>
              </option>
            <% }) %>
          <% } else { %>
            <% branchScope.forEach(function(bid) { %>
              <option value="<%= bid %>" <%= bid === branchId ? "selected" : "" %>>
                <%= t("branch") %> <%= bid %>
              </option>
            <% }) %>
          <% } %>
        </select>
      <% } else { %>
        <span class="text-xs font-semibold text-slate-800"><%= branchName || branchId || "N/A" %></span>
      <% } %>
    </div>
  </form>
  <form method="post" action="/auth/logout" class="flex items-center">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <button type="submit" class="rounded-full border border-slate-200 bg-white px-3 py-1.5 text-xs font-semibold uppercase tracking-[0.2em] text-slate-600 shadow-sm transition hover:border-accent/40 hover:text-accent">
      <%= t("logout") %>
    </button>
  </form>
  <div class="flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-1.5 text-xs shadow-sm">
    <span class="text-[10px] uppercase tracking-[0.2em] text-muted"><%= t("language") %></span>
    <a class="font-semibold text-slate-700 transition hover:text-accent" href="?lang=en"><%= t("english") %></a>
    <span class="text-slate-300">|</span>
    <a class="font-semibold text-slate-700 transition hover:text-accent" href="?lang=ur"><%= t("urdu") %></a>
  </div>
</div>
