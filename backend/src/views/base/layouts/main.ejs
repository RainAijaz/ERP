    <script>
      (function () {
        const toggles = document.querySelectorAll("[data-submenu-toggle]");
        const wraps = document.querySelectorAll("[data-submenu-wrap]");
        const mediaQuery = window.matchMedia("(min-width: 1024px)");
        const closeDelayMs = 600;

        const closeAll = (except) => {
          document.querySelectorAll("[data-submenu]").forEach((menu) => {
            if (menu === except) return;
            menu.classList.add("hidden");
          });
        };

        const setMenuState = (menu, open) => {
          if (!menu) return;
          if (open) {
            menu.classList.remove("hidden");
          } else {
            menu.classList.add("hidden");
          }
        };

        toggles.forEach((toggle) => {
          toggle.addEventListener("click", (event) => {
            if (mediaQuery.matches) return;
            event.stopPropagation();
            const key = toggle.getAttribute("data-submenu-toggle");
            const menu = document.querySelector(`[data-submenu="${key}"]`);
            if (!menu) return;
            const willOpen = menu.classList.contains("hidden");
            closeAll(menu);
            setMenuState(menu, willOpen);
          });
        });

        wraps.forEach((wrap) => {
          const toggle = wrap.querySelector("[data-submenu-toggle]");
          if (!toggle) return;
          const key = toggle.getAttribute("data-submenu-toggle");
          const menu = document.querySelector(`[data-submenu="${key}"]`);
          let closeTimer = null;
          const isNested = Boolean(wrap.closest("[data-submenu]"));
          const openMenu = () => {
            if (!mediaQuery.matches) return;
            if (!isNested) {
              closeAll(menu);
            }
            setMenuState(menu, true);
          };
          const scheduleClose = () => {
            if (!mediaQuery.matches) return;
            if (closeTimer) clearTimeout(closeTimer);
            closeTimer = setTimeout(() => setMenuState(menu, false), closeDelayMs);
          };
          const cancelClose = () => {
            if (closeTimer) {
              clearTimeout(closeTimer);
              closeTimer = null;
            }
          };

          wrap.addEventListener("mouseenter", () => {
            cancelClose();
            openMenu();
          });
          wrap.addEventListener("mouseleave", scheduleClose);
          if (menu) {
            const menuElements = [menu, ...menu.querySelectorAll("[data-submenu]")];
            menuElements.forEach((element) => {
              element.addEventListener("mouseenter", () => {
                cancelClose();
                openMenu();
              });
              element.addEventListener("mouseleave", scheduleClose);
            });
          }
        });

        document.addEventListener("click", () => {
          if (!mediaQuery.matches) {
            closeAll();
          }
        });

        mediaQuery.addEventListener("change", () => closeAll());
      })();
    </script>
