<div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
  <div class="sm:flex sm:items-start">
    <div class="mt-3 w-full text-center sm:ml-4 sm:mt-0 sm:text-left">
      <h3 class="text-lg font-semibold leading-6 text-slate-900" id="modal-title"><%= title %></h3>
      
      <form action="<%= branch && branch.id ? '/administration/branches/' + branch.id : '/administration/branches' %>" method="POST" class="mt-4 space-y-5" data-translate-mode="transliterate">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
          <div>
            <label class="block text-sm font-medium text-slate-700"><%= t('branch_code') %></label>
            <input type="text" name="code" value="<%= branch ? branch.code : '' %>" required class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-accent focus:ring-accent sm:text-sm uppercase <%= branch && branch.id ? 'cursor-not-allowed bg-slate-50 text-slate-500' : '' %>" <%= branch && branch.id ? 'readonly disabled' : '' %>>
            <p class="mt-1 text-xs text-slate-500"><%= t('unique_identifier_hint') %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-slate-700"><%= t('branch_name') %></label>
            <input type="text" name="name" value="<%= branch ? branch.name : '' %>" required class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-accent focus:ring-accent sm:text-sm">
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-700"><%= t('branch_name_ur') || t('name_ur') %></label>
          <input type="text" name="name_ur" value="<%= branch ? branch.name_ur : '' %>" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-accent focus:ring-accent sm:text-sm">
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-700"><%= t('city') %></label>
          <input type="text" name="city" value="<%= branch ? branch.city : '' %>" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-accent focus:ring-accent sm:text-sm">
        </div>

        <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
          <button type="submit" class="inline-flex w-full justify-center rounded-md bg-accent px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-accent/90 sm:ml-3 sm:w-auto">
            <%= t('save') %>
          </button>
          <button type="button" onclick="document.getElementById('modal-backdrop').classList.add('hidden'); document.getElementById('modal-shell').classList.add('hidden');" class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 hover:bg-slate-50 sm:mt-0 sm:w-auto">
            <%= t('cancel') %>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include("../../base/partials/urdu-translate-utils") %>
